<div class="form-wrapper spacer centered">
  <%= form_tag password_recovery_path, :method => "post" do %>

      <h1>Recuperaci√≥n de password</h1>

      <%= hidden_field_tag(:id,@id) %>
      <%= hidden_field_tag(:hash,@hash) %>

      <div class="form-group">
        <%= label :password, 'Password:' %>
        <%= password_field_tag(:password,'', :class => "form-control") %>
      </div>
      <div class="form-group">
        <%= label :password_confirmation, 'Password:' %>
        <%= password_field_tag(:password_confirmation,'', :class => "form-control") %>
      </div>

      <div class="actions">
        <%= submit_tag 'Enviar', :class => "btn btn-large btn-primary"%>
      </div>

  <% end %>
</div>