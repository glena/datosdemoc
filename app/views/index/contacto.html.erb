  <%= form_tag contacto_path, :method => "post" do %>

      <div class="form-group">
        <%= label :email, 'Email:' %>
        <%= email_field_tag(:email,'', :class => "form-control", :required => '1') %>
      </div>

      <div class="form-group">
        <%= label :nombre, 'Nombre:' %>
        <%= text_field_tag(:nombre,'', :class => "form-control", :required => '1') %>
      </div>

      <div class="form-group">
        <%= label :mensaje, 'Mensaje:' %>
        <%= text_area_tag(:mensaje,'', :class => "form-control", :required => '1') %>
      </div>


      <div class="actions">
        <%= submit_tag 'Enviar', :class => "btn btn-large btn-primary"%>
      </div>
  <% end %>
</div>
